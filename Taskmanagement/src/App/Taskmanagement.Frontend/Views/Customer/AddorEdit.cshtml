@model Taskmanagement.Frontend.Models.Customer

@{
    ViewData["Title"] = "AddorEdit";
}

<h1>AddorEdit</h1>

<h4>Customer</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddorEdit" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
